<!DOCTYPE html>
<html>
<head>
  <title>Final</title>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- header starts -->
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="/users">Foodie Share</a>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li class="active">
	        	<a href="#">Posts<span class="sr-only">(current)</span></a>
	        </li>
	        <li>
	        	<a href=<%= restaurants_url %>>Restaurants</a>
	        </li>
	      </ul>
	      <form class="navbar-form navbar-left" role="search">
	        <div class="form-group">
	          <input type="text" class="form-control" placeholder="Search a single restaurant">
	        </div>
	        <button type="submit" class="btn btn-default">Search</button>
	      </form>
	      <ul class="nav navbar-nav navbar-right">
	        <!-- <li> -->
	        	<!-- <a href="#">Sign In</a> -->
	        	
	        	<% if session["user_id"].present? %>
	        		<li><%= User.find_by(id: session["user_id"]).nick_name %></li>
	        		<li><%= link_to "Sign Out", '/logout' %></li>
	        	<% else %>
	        		<li><%= link_to "Sign In", '/login' %></li>
	        		<li><%= link_to "Sign Up", '/signup' %></li>
	        	<% end %>
	        <!-- </li> -->
	        <li>
	        	<!-- <a href="#">Sign Up</a> -->
	        </li>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
	<!-- header ends -->

	<!-- body starts -->
	<div class="container">
	
	</div>
	<%= yield %>

	<!-- body ends -->

	<!-- footer starts -->
	<!-- footer ends -->

</body>
</html>
